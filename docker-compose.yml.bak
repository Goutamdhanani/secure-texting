version: "3.8"
services:
  app:
    build: .
    container_name: secure-texting-app
    working_dir: /src
    command: uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
    volumes:
      - ./:/src        # mount project into /src (so changes are live)
      - ./data:/data   # persistent sqlite data
    ports:
      - "8000:8000"
    environment:
      - PYTHONUNBUFFERED=1
      - PYTHONPATH=/src
  nginx:
    image: nginx:stable
    container_name: secure-texting-nginx
    ports:
      - "80:80"
    volumes:
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
  prometheus:
    image: prom/prometheus:latest
    container_name: prometheus
    volumes:
      - ./prometheus:/etc/prometheus
    ports:
      - "9090:9090"
